<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content__pantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/superFondo">


    <RelativeLayout
        android:id="@+id/con2"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/layouts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_action_consejo1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/texto8"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="¡Utiliza siempre tu cinturon de Seguridad!"
            android:textColor="@color/Blanco"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img2"
            android:layout_toEndOf="@+id/img2"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/layouts"


        android:layout_marginTop="18dp"
        android:layout_below="@+id/con2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_action_consejo3"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="195dp"
            android:layout_marginEnd="195dp" />

        <TextView
            android:id="@+id/txtDiesel"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="¡No utilizar el celular al conducir!"
            android:textColor="@color/Blanco"
            android:layout_width="200dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp" />


    </RelativeLayout>

</RelativeLayout>


